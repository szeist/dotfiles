! XTerm molokai theme
*xterm*background: #101010
*xterm*foreground: #d0d0d0
*xterm*cursorColor: #d0d0d0
*xterm*color0: #101010
*xterm*color1: #960050
*xterm*color2: #66aa11
*xterm*color3: #c47f2c
*xterm*color4: #30309b
*xterm*color5: #7e40a5
*xterm*color6: #3579a8
*xterm*color7: #9999aa
*xterm*color8: #303030
*xterm*color9: #ff0090
*xterm*color10: #80ff00
*xterm*color11: #ffba68
*xterm*color12: #5f5fee
*xterm*color13: #bb88dd
*xterm*color14: #4eb4fa
*xterm*color15: #d0d0d0

! Setup font
*xterm*faceName: DejaVuSansMono Nerd Font Mono
*xterm*faceSize: 12
*xterm*faceSize1: 10
*xterm*faceSize2: 12
*xterm*faceSize3: 14
*xterm*faceSize4: 18
*xterm*faceSize5: 24
*xterm*faceSize6: 36

! Normal cursor size
Xcursor.size: 12

! Copy to clipboard
*xterm*selectToClipboard: true

! Paste from clipboard
! Zoom in/out
xterm.VT100.Translations: #override \
  Ctrl Shift <KeyPress> +: larger-vt-font() \n\
  Ctrl Shift <KeyPress> -: smaller-vt-font() \n\
	Ctrl Shift <KeyPress> 0: set-vt-font(d) \n\
  Ctrl Shift <KeyPress> C: copy-selection(CLIPBOARD) \n\
  Ctrl Shift <KeyPress> V: insert-selection(CLIPBOARD)
